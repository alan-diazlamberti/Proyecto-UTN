<div class="container-fluid">
    {{!-- Comienza titulo --}}
    <div class="row" style="margin-top: 150px;">
        <div class="col">
            <h3 class="fw-bold mb-4 text-center">EDITAR RECETA</h3>
        </div>
    </div>
    {{!-- Finaliza titulo --}}

    {{!-- Comienza formulario --}}
    <form action="/admin/panel/edit" method="post" enctype="multipart/form-data">
        <input type="hidden" value="{{receta.ID}}" name="ID">
        {{!-- Comienza titulo, minuto, porciones, imagen --}}
        <div class="row">
            <div class="col d-flex justify-content-center">
                <input type="text" class="form-control input-titulo" placeholder="Titulo" name="titulo"
                    value="{{receta.titulo}}">
            </div>
        </div>
        <div class="row">
            <div class="col d-flex justify-content-center mt-1">
                <input type="number" class="form-control input-minutos" placeholder="Minutos" name="minutos"
                    value="{{receta.minutos}}"></input>
                <input type="number" class="form-control input-porciones" placeholder="Porciones" name="porciones"
                    value="{{receta.porciones}}"></input>
            </div>
        </div>
        <div class="row">
            <div class="col d-flex justify-content-center mt-1">
                <label><input type="file" class="form-control input-imagen" name="imagen" id="imagen"></label>
            </div>
        </div>
        <div class="row">
            <div class="col d-flex justify-content-center mt-1">
                <label class="form-control input-eliminar-imagen">Eliminar imagen<input type="checkbox" class="ms-2"
                        name="eliminar_imagen" id="eliminar_imagen" value="1"></label>
                <input type="hidden" name="imagen_original" value="{{receta.imagen}}">
            </div>
        </div>
        {{!-- Finaliza titulo, minuto, porciones, imagen --}}

        {{!-- Comienza ingredientes y preparacion --}}
        <div class="row d-flex justify-content-center mt-3">
            <div class="col-6 col-sm-5 col-lg-4">
                <textarea type="text" class="form-control mb-1" placeholder="Ingredientes"
                    name="ingredientes">{{receta.ingredientes}}</textarea>
            </div>
            <div class="col-6 col-sm-5 col-lg-4">
                <textarea type="text" class="form-control mb-1" placeholder="Preparacion"
                    name="preparacion">{{receta.preparacion}}</textarea>
            </div>

            <div class="error">
                {{#if error}}
                <p class="text-danger mt-3 text-center">{{errorMessage}}</p>
                {{/if}}
            </div>
        </div>
        {{!-- Finaliza ingredientes y preparacion --}}

        {{!-- Comienzan buttons --}}
        <div class="row">
            <div class="col d-flex justify-content-center mt-4 mb-3">
                <a href="https://proyecto-utn-86c23b1be57c.herokuapp.com/admin/panel/"><button type="button"
                        class="btn btn-danger me-3">Volver</button></a>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </div>
        {{!-- Finalizan buttons --}}
    </form>
    {{!-- Finaliza formulario --}}
</div>